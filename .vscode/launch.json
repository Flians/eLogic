{
  "version": "0.2.0",
  "env": {
        "RUSTFLAGS": "-Awarnings"
  },
  "configurations": [
    {
      "name": "emig",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/emig/emig",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build_sh"
    },
    {
      "name": "MIGReSub",
      "type": "lldb",
      "request": "launch",
      "program": "python3",
      "args": [
        "mig/main.py"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/mig/main.py",
      "justMyCode": false,
      "console": "integratedTerminal",
      "args": []
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'MIGBalance'",
      "cargo": {
        "args": [
          "build",
          "--bin=MIGBalance",
          "--package=MIGBalance"
        ],
        "filter": {
          "name": "MIGBalance",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'MIGBalance'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=MIGBalance",
          "--package=MIGBalance"
        ],
        "filter": {
          "name": "MIGBalance",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug integration test 'datalog'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--test=datalog",
          "--package=MIGBalance"
        ],
        "filter": {
          "name": "datalog",
          "kind": "test"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug integration test 'prop'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--test=prop",
          "--package=MIGBalance"
        ],
        "filter": {
          "name": "prop",
          "kind": "test"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug mig_egg tests with ilp-cbc",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",         
          "--features", "ilp-cbc",
          "--package", "mig_egg"
        ],
        // "filter": {
        //   "name": "mig_egg",  
        //   "kind": "lib"      
        // }
      },
      "args": [
        "--nocapture"       
      ],
      "cwd": "${workspaceFolder}/mig_egg"
    }
  ]
}